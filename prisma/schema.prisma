generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id        String   @id @default(cuid())
  firstname String   @map("first_name")
  lastname  String?  @map("last_name")
  email     String   @unique
  phone     String?   @unique
  avatar    String?
  country   String?
  city      String?
  password  String?
  role      String   @default("seller")
  status    String   @default("active")
  createdAt DateTime @default(now()) @map(name: "created_at")
  updatedAt DateTime @updatedAt @map(name: "updated_at")
  posts     Post[] @relation("_posts_author")
  // comments  Comment[]
  shops     Shop[]  @relation("_users_shop")

  @@map(name: "users")
}

model Post {
  id         String       @id @default(cuid())
  title      String
  body       String
  // comments          Comment[]
  // categoryId String              @map("category_id")
  author     User         @relation("_posts_author", fields: [authorId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  authorId   String
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt
  categories Category[]
  PostImages PostImages[] @relation("post_images")

  @@map(name: "posts")
  @@index([authorId])
}

model Category {
  id    String  @id @default(cuid())
  name  String?
  posts Post[]

  @@map(name: "categories")
}

model PostImages {
  id     String @id @default(cuid())
  post   Post   @relation("post_images", fields: [postId], references: [id])
  postId String

  @@map(name: "post_images")
  @@index([postId])
}

